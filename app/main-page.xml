<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="onLoaded" class="page">
    <Page.actionBar>
        <ActionBar title="My App" icon="" class="action-bar">
        </ActionBar>
    </Page.actionBar>
    <StackLayout class="p-20">
        <Label text="Tap the button" class="h1 text-center"/>
        <Button text="Tap to show feedback" tap="showFeedback" class="btn btn-primary btn-active"/>
        <Button text="Tap to open modal page" tap="openModal" class="btn btn-primary btn-active"/>
    </StackLayout>
</Page>
